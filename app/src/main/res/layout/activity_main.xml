<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/Coordinator"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Enter filename for pictures with a reference object:"
            app:layout_constraintStart_toStartOf="@+id/prefix"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/prefix"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Filename with reference object"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />
        <TextView
            android:id="@+id/textView465"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Enter filename for pictures without a reference object:"
            app:layout_constraintStart_toStartOf="@+id/prefix"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/prefix1"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Filename without reference object"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prefix" />

        <TextView
            android:id="@+id/textViewDia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Enter circumference of tree (cm):"
            app:layout_constraintStart_toStartOf="@+id/prefix"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/diameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Type in circumference of tree"
            android:inputType="number" />

        <TextView
            android:id="@+id/textViewHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Enter height of tree (cm):"
            app:layout_constraintStart_toStartOf="@+id/prefix"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Type in height of tree"
            android:inputType="number" />

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Enter age of tree (months):"
            app:layout_constraintStart_toStartOf="@+id/prefix"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Type in age of tree"
            android:inputType="number" />

        <TextView
            android:id="@+id/textViewType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Enter tree type:"
            app:layout_constraintStart_toStartOf="@+id/prefix"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/treetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Type in tree type"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textViewQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Soil quality:"
            app:layout_constraintStart_toStartOf="@+id/prefix"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:text="good soil"
                android:onClick="OnSoilClick1"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:text="medium soil"
                android:onClick="OnSoilClick2"
                android:layout_height="wrap_content" />

            <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:text="poor soil"
                android:onClick="OnSoilClick3"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radio4"
                android:layout_width="wrap_content"
                android:text="skip"
                android:onClick="OnSoilClick4"
                android:layout_height="wrap_content" />

        </RadioGroup>



        <TextView
            android:id="@+id/textViewOrientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Reference Object orientation (Credit Card):"
            app:layout_constraintStart_toStartOf="@+id/prefix"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/OR1"
                android:layout_width="wrap_content"
                android:text="lengthwise"
                android:onClick="OnOrientation1"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/OR2"
                android:layout_width="wrap_content"
                android:text="upright"
                android:onClick="OnOrientation2"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/OR3"
                android:layout_width="wrap_content"
                android:text="diagonally"
                android:onClick="OnOrientation3"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/OR4"
                android:layout_width="wrap_content"
                android:text="skip"
                android:onClick="OnOrientation4"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <TextView
            android:id="@+id/textViewGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="GPS usage:"
            app:layout_constraintStart_toStartOf="@+id/prefix"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/GPS1"
                android:layout_width="wrap_content"
                android:text="record GPS position"
                android:onClick="OnGPSOn"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/GPS2"
                android:layout_width="wrap_content"
                android:text="don't record GPS position"
                android:onClick="OnGPSOff"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Take a picture with a reference object:"
            app:layout_constraintBottom_toTopOf="@+id/picture"
            app:layout_constraintStart_toStartOf="@+id/picture" />

        <Button
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:onClick="callDispatchTakePictureIntentWithObject"
            android:text="   Reference object   "
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Take a picture without a reference object:"
            app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintStart_toStartOf="@+id/button2" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:onClick="callDispatchTakePictureIntentWithoutObject"
            android:text="No Reference object"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</ScrollView>

    </android.support.design.widget.CoordinatorLayout>

</android.support.constraint.ConstraintLayout>